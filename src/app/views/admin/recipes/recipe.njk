{% extends 'admin-layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/admin/recipes/recipe.css">
{% endblock styles %}

{% block content %}
    <section class="recipe">
        <div class="title">
            <h1>Receita:
                {{ recipe.title }}</h1>
            <a href="/admin/recipes/{{ recipe.recipe_id }}/edit" class="button">Editar receita</a>
        </div>

        <div class="hero">
            {% if files %}
                <div class="highlight">
                    <img src="{{ files[0].src}}" alt="{{ recipe.title }}">
                    <div class="dots">
                        {% for image in files %}
                            <img src="{{ image.src}}" alt="{{ recipe.title }}" class="active" onclick="imageGallery.setImage(event)">
                        {% endfor %}
                    </div>
                </div>
                <div class="preview">
                    {% for image in files %}
                        <img src="{{ image.src}}" alt="{{ recipe.title }}" class="active" onclick="imageGallery.setImage(event)">
                    {% endfor %}
                </div>
            {% endif %}
            <h1>{{  recipe.title }}</h1>
            <p>por
                {{  recipe.name }}</p>
        </div>

        <div class="recipe-description">
            <h3>Ingredientes
                <span class="span">esconder</span></h3>
            <div class="description">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>
                            {{ ingredient }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="recipe-description">
            <h3>Modo de preparo
                <span class="span">esconder</span></h3>
            <div class="description">
                <ul>
                    {% for preparo in recipe.preparation %}
                        <li>{{ preparo }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="recipe-description">
            <h3>Informações adicionais
                <span class="span">esconder</span></h3>
            <div class="description">
                <p>{{ recipe.additional_info }}</p>
            </div>
        </div>

        <input type="hidden" name="userId" value="{{ recipe.user_id }}">
    </section>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/your-recipe.js"></script>
{% endblock scripts %}