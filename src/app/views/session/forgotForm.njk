{% extends 'admin-layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/admin/users/create-form.css">
{% endblock styles %}

{% block content %}
    <form action="/forgot-password" method="POST">
        <section class="container">
            <div class="title">
                <h3>Esqueceu a senha?</h3>
            </div>
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div>
                        <input type="text" name="email" value="{{ user.email}}" onkeydown="Mask.apply(this, 'isEmail')" onblur="Validate.apply(this, 'isEmail')"></div>
                </div>
            </div>

            <div class="send">
                <button type="submit" class="button">Recuperar</button>
            </div>

        </section>
    </form>
{% endblock content %}