{% extends 'admin-layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="/styles/admin/users/create-form.css">
{% endblock styles %}

{% block content %}
    <form action="/password-reset" method="POST">
        <section class="container">
            <div class="title">
                <h3>Nova Senha</h3>
            </div>
            <div class="fields">
                {% include 'session/resetFields.njk' %}
            </div>

            <div class="send">
                <button type="submit" class="button">Nova senha</button>
            </div>

            <input type="hidden" name="token" value="req.params.token">
        </section>
    </form>
{% endblock content %}